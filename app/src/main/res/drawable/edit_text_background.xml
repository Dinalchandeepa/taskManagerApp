<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main background layer -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E0E0E0"
                android:endColor="#CCCCCC"
                android:angle="135" />
            <corners android:radius="9dp" />
        </shape>
    </item>

    <!-- Top highlight layer -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D1E9F6"
                android:endColor="#84A7A1"
                android:angle="90" />
            <corners android:radius="9dp" />
        </shape>
    </item>

    <!-- Border layer -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="9dp" />
            <stroke android:width="1dp" android:color="@color/samurai_gold" />
        </shape>
    </item>
</layer-list>